<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Camera -->
    <uses-feature android:name="android.hardware.camera.any" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_logo_establishment"
        android:label="@string/appName"
        android:roundIcon="@mipmap/app_logo_establishment"
        android:supportsRtl="true"
        android:theme="@style/Theme.SanPabLOOKEstablishment"
        tools:targetApi="31">

        <activity
            android:name="com.example.sanpablook.ForgotPasswordActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.sanpablook.RegistrationProcessActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.ConfirmRegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.ProfileSettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.RegistrationCompleteActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.RegistrationCreateAccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.EmailConfirmationSent"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sanpablook.SignInActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sanpablook.BottomNavBarActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>